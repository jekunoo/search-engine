<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.java.strukdat.searchengine.controller.SearchController">
    <!-- Top Section -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #f3f3f3; -fx-padding: 10;">
            <TextField fx:id="searchField" promptText="Search..." HBox.hgrow="ALWAYS" />
            <Button fx:id="searchButton" onAction="#onSearchAction" text="Search" />
        </HBox>
    </top>

    <!-- Center Section -->
    <center>
        <VBox spacing="10" style="-fx-padding: 10;">
            <!-- Results Section -->
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Search Results" />
            <ListView fx:id="resultsList" prefHeight="400" />
        </VBox>
    </center>

    <!-- Right Section (Details Panel) -->
    <right>
        <VBox prefHeight="455.0" prefWidth="492.0" spacing="10" style="-fx-padding: 10; -fx-background-color: #f9f9f9; -fx-border-color: #ddd; -fx-border-width: 0 0 0 1;">
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Details" />
            <TextArea fx:id="detailsArea" editable="false" prefHeight="400" wrapText="true" />
        </VBox>
    </right>

    <!-- Bottom Section -->
    <bottom>
        <HBox alignment="CENTER" spacing="10" style="-fx-background-color: #f3f3f3; -fx-padding: 10;" />
    </bottom>
</BorderPane>
