<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="720.0" prefWidth="1080.0" style="-fx-background-color: linear-gradient(to bottom, #1e3c43, #3A696F);" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.java.strukdat.searchengine.controller.SearchController">
    <children>
        <BorderPane prefHeight="720.0" prefWidth="1080.0">
            <!-- Header Section -->
            <top>
                <VBox prefHeight="94.0" prefWidth="1080.0" BorderPane.alignment="CENTER">
                    <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="80.0" prefWidth="1080.0" style="-fx-background-color: #0B2326; -fx-padding: 5; -fx-spacing: 0;">
                            <children>
                                <Label prefHeight="50.0" prefWidth="139.0" style="-fx-font-size: 36; -fx-font-family: 'Impact';" text="CONAN." textFill="WHITE" />
                                <TextField fx:id="searchField" prefHeight="30.0" prefWidth="253.0" promptText="Search for something..." style="-fx-background-color: #FFFFFF; -fx-border-radius: 5; -fx-padding: 5; -fx-font-size: 14;" />
                                <Button fx:id="searchButton" mnemonicParsing="false" onAction="#onActionSearchButton" prefHeight="30.0" prefWidth="75.0" style="-fx-background-color: Blue;" text="Search" textFill="WHITE" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </top>

            <!-- Suggestions List Section -->
            <left>
                <VBox fx:id="suggestionsContainer" prefHeight="626.0" prefWidth="1071.0" spacing="10.0" style="-fx-padding: 10;" BorderPane.alignment="CENTER">
                    <children>
                        <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: white;" text="Result" />
                        <!-- Container for Text Items -->
                        <VBox fx:id="textContainer" prefHeight="546.0" prefWidth="1051.0" spacing="5.0" style="-fx-background-color: #FFFFFF; -fx-padding: 10; -fx-border-color: #C0C0C0; -fx-border-radius: 5;">
                            <!-- Example Text Entries -->
                            <Label style="-fx-font-size: 14;" text="Result 1" />
                            <Label style="-fx-font-size: 14;" text="Result 2" />
                            <Label style="-fx-font-size: 14;" text="Result 3" />
                        </VBox>
                    </children>
                </VBox>
            </left>
        </BorderPane>
    </children>
</AnchorPane>
